@model PeerTutoringNetwork.Viewmodels.SubjectVM
@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash-alt"></i> Delete Subject</h2>
    <hr />

    <p class="text-danger">Are you sure you want to delete this subject?</p>

    <dl class="row">
        <dt class="col-sm-4"><i class="fas fa-book"></i> Subject Name</dt>
        <dd class="col-sm-8">@Model.SubjectName</dd>

        <dt class="col-sm-4"><i class="fas fa-align-left"></i> Description</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-4"><i class="fas fa-user"></i> Created By</dt>
        <dd class="col-sm-8">@Model.CreatedByUsername</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SubjectId" />

        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>
