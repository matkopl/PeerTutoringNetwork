@model IEnumerable<PeerTutoringNetwork.Viewmodels.SubjectVM>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-book"></i> Subjects</h2>
    <hr />
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Subject
        </a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Subject Name</th>
                <th>Description</th>
                <th>Created By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.SubjectName</td>
                    <td>@subject.Description</td>
                    <td>@subject.CreatedByUsername</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@subject.SubjectId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> EditAction
                        </a>
                        <a asp-action="Details" asp-route-id="@subject.SubjectId" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@subject.SubjectId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
