@model PeerTutoringNetwork.Viewmodels.SubjectVM

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-edit"></i> Edit Subject</h2>
    <hr />

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SubjectId)

        <div class="form-group">
            <label asp-for="SubjectName"><i class="fas fa-book"></i> Subject Name</label>
            <input asp-for="SubjectName" class="form-control" placeholder="Enter subject name" />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"><i class="fas fa-align-left"></i> Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter subject description"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="CreatedByUserId"><i class="fas fa-user"></i> Created By</label>
            <select asp-for="CreatedByUserId" class="form-control" asp-items="ViewBag.CreatedByUserId"></select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>
