@model PeerTutoringNetwork.Viewmodels.SubjectVM

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-info-circle"></i> Subject Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-4"><i class="fas fa-book"></i> Subject Name</dt>
        <dd class="col-sm-8">@Model.SubjectName</dd>

        <dt class="col-sm-4"><i class="fas fa-align-left"></i> Description</dt>
        <dd class="col-sm-8">@Model.Description</dd>

        <dt class="col-sm-4"><i class="fas fa-user"></i> Created By</dt>
        <dd class="col-sm-8">@Model.CreatedByUsername</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.SubjectId" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
