@model PeerTutoringNetwork.Viewmodels.AppointmentVM

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Appointment";
}

<h2 class="text-center mb-4">Create Appointment</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Mentor Dropdown -->
            <div class="form-group">
                    <label asp-for="MentorId" class="form-label">Mentor</label>
                    <select asp-for="MentorId" class="form-control" asp-items="ViewBag.MentorId">
                        <option value="">-- Select Mentor --</option>
                    </select>
            </div>

            <!-- Subject Dropdown -->
            <div class="form-group">
                <label asp-for="SubjectId" class="form-label">Subject</label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId">
                    <option value="">-- Select Subject --</option>
                </select>
            </div>

            <!-- Appointment Date -->
            <div class="form-group">
                <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" placeholder="yyyy-MM-dd hh:mm" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Create Appointment</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>
