@model PeerTutoringNetwork.Viewmodels.AppointmentVM

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-plus-circle"></i> Create Appointment</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="MentorId"><i class="fas fa-user-tie"></i> Mentor</label>
            <select asp-for="MentorId" class="form-control" asp-items="ViewBag.MentorId"></select>
        </div>

        <div class="form-group">
            <label asp-for="SubjectId"><i class="fas fa-book"></i> Subject</label>
            <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
        </div>

        <div class="form-group">
            <label asp-for="AppointmentDate"><i class="fas fa-calendar-alt"></i> Appointment Date</label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" value="@Model?.AppointmentDate.ToString("yyyy-MM-ddTHH:mm")" />
        </div>

        <button type="submit" class="btn btn-success">
            <i class="fas fa-save"></i> Save
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    }
</div>

