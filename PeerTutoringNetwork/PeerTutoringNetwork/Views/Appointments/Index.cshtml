@model IEnumerable<PeerTutoringNetwork.Viewmodels.AppointmentVM>

@{
    ViewData["Title"] = "Appointments";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">Appointments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Appointment</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Appointment Date</th>
            <th>Username</th>
            <th>Subject Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AppointmentDate.ToString("g")</td> 
                <td>@item.MentorUsername</td>
                <td>@item.SubjectName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item." class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
