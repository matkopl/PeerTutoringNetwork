@model IEnumerable<PeerTutoringNetwork.Viewmodels.AppointmentVM>


@{
    ViewData["Title"] = "Appointments";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-calendar-alt"></i> Appointments</h2>
    <hr/>
    <p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create New Appointment
        </a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Mentor</th>
            <th>Subject</th>
            <th>Appointment Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MentorUsername</td>
                <td>@item.SubjectName</td>
                <td>@item.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="EditAction" asp-route-id="@item.AppointmentId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> EditAction
                    </a>
                    <a asp-action="Details" asp-route-id="@item.AppointmentId" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a href="@Url.ActionLink("DeleteAction", "Appointment", new { id = item.AppointmentId })" asp-route-id="@item.AppointmentId" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>