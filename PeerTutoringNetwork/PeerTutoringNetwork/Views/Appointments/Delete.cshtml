@model PeerTutoringNetwork.Viewmodels.AppointmentVM

@{
    ViewData["Title"] = "Delete appointment";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2><i class="fas fa-trash-alt"></i> Confirm Delete</h2>
    <hr />

    <p>Are you sure you want to delete this appointment?</p>

    <dl class="row">
        <dt class="col-sm-4">Mentor</dt>
        <dd class="col-sm-8">@Model.MentorUsername</dd>

        <dt class="col-sm-4">Subject</dt>
        <dd class="col-sm-8">@Model.SubjectName</dd>

        <dt class="col-sm-4">Appointment Date</dt>
        <dd class="col-sm-8">@Model.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AppointmentId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>
